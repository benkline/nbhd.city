# AWS Configuration
aws_region  = "us-east-1"
environment = "production"

# DynamoDB Configuration
dynamodb_billing_mode           = "PAY_PER_REQUEST"
enable_point_in_time_recovery   = true
enable_streams                  = false

# Lambda Configuration
lambda_runtime          = "python3.11"
lambda_timeout          = 30
lambda_memory_size      = 512
lambda_log_retention_days = 14

# API Gateway Configuration
api_gateway_log_retention_days     = 14
api_gateway_logging_level          = "INFO"
api_gateway_throttle_burst_limit   = 5000
api_gateway_throttle_rate_limit    = 10000

# Application Secrets (CHANGE THESE!)
jwt_secret_key                   = "your-secret-key-minimum-32-characters-long"
bluesky_oauth_client_id          = "your-bluesky-oauth-client-id"
bluesky_oauth_client_secret      = "your-bluesky-oauth-client-secret"

# Application Configuration
access_token_expire_minutes      = 10080
frontend_url                     = "https://your-frontend-domain.com"
bluesky_oauth_redirect_uri       = "https://your-api-domain.com/auth/callback"

# Optional: Custom Domain
# custom_domain_name    = "api.nbhd.city"
# acm_certificate_arn   = "arn:aws:acm:us-east-1:123456789012:certificate/..."

# Optional: X-Ray Tracing
# enable_xray_tracing   = true
